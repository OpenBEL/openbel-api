{
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "DESCRIBE EVIDENCE COLLECTION",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "evidence",
    "facets"
  ],
  "properties": {
    "evidence": {
      "type": "array",
      "minItems": 0,
      "title": "",
      "description": "",
      "items": {
        "$ref":"http://next.belframework.org/schema/evidence.schema.json#/properties/evidence"
      }
    },
    "facets": {
      "type": "array",
      "minItems": 0,
      "title": "",
      "description": "",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "category",
          "name",
          "value",
          "filter",
          "count"
        ],
        "properties": {
          "category": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "filter": {
            "type": "string"
          },
          "count": {
            "type": "integer"
          }
        }
      }
    },
    "metadata": {
      "title": "Metadata",
      "description": "Data about the evidence collection",
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "collection_paging": {
          "type": "object",
          "properties": {
            "total": {
              "type": "number",
              "minimum": 0
            },
            "filtered_total": {
              "type": "number",
              "minimum": 0
            },
            "page_total": {
              "type": "number",
              "minimum": 0
            },
            "current_page": {
              "type": "number",
              "minimum": 0
            },
            "resources_in_page_total": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    }
  }
}
